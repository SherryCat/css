<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
	<title>Document</title>
</head>
<body>
	<script type="text/javascript">
	 var h=parseFloat(prompt("请输入身高（米）："));
	 var w=parseFloat(prompt("请输入体重（公斤）："));
	 var  BMI=w/Math.pow(h,2);
	 if(BMI>32){
 		alert("非常肥胖");
 	}else if(BMI>=28){
 		alert("肥胖");
 	}else if(BMI>=25){
 		alert("过重");
 	}else if(BMI>=18.5){
 		alert("正常");
 	}else{
 		alert("过轻");
 	}
	</script>
</body>
</html>
