    <script>
        window.onload=function(){
            function $(id){
                return document.getElementById(id);
            }
            $("txt").oninput=function(){
                if(this.value==""){
                    $("message").style.display="block";
                }else{
                    $("message").style.display="none";
                }
            }

        }
    </script>
